<p id="notice"><%= notice %></p>
<%= link_to '下書き一覧', index_1_blogs_path %>|
<%= link_to '公開一覧', index_2_blogs_path %>|
<%= link_to '編集済み一覧', index_3_blogs_path %>|
<%= link_to '削除済み一覧', index_4_blogs_path %>|

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.status %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

